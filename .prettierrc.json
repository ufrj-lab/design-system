{
  "printWidth": 80,
  "useTabs": true,
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "trailingComma": "es5",
  "proseWrap": "always",
  "overrides": [
    {
      "files": [".*.json", "*.json"],
      "options": {
        "useTabs": false
      }
    }
  ]
}
