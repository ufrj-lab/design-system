{
  "version": "2",

  "plugins": {
    "eslint": {
      "enabled": true,
      "channel": "eslint-5",
      "config": {
        "config": "./.eslintrc.json"
      }
    },
    "fixme": {
      "enabled": true
    },
    "git-legal": {
      "enabled": true
    },
    "markdownlint": {
      "enabled": true
    },
    "scss-lint": {
      "enabled": true
    }
  },

  "exclude_patterns": ["helpers/", "**/__tests__", "**/assets"]
}
