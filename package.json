{
  "name": "@ufrj/mnv",
  "version": "0.0.0",
  "description": "Minerva Design System",
  "author": "Vinícius Carvalho <vinicius.fc93@gmail.com> (https://ufrj.br)",
  "contributors": [],
  "license": "AGPL-3.0",
  "private": true,
  "workspaces": [
    "./components/*",
    "./tools/cli"
  ],
  "scripts": {
    "postinstall": "run-p ci",
    "ci": "run-s link build",
    "l-run": "lerna run",
    "l-run-p": "yarn l-run --parallel --stream",
    "p-run": "prettier '**/*.{js,ts,html,md,yml,json}'",
    "e-run": "eslint --ext .js,.html .",
    "t-run": "tslint -c tslint.json -p tsconfig.json",
    "on-run": "onchange -e '**/demo/**' -e '**/lib/**' -e '**/public/**' -e '**/.rpt2_cache/**' -e '**/node_modules/**'",
    "build": "yarn l-run build",
    "clean-kill": "yarn clean-all && rm -fr node_modules ",
    "clean-all": "run-s clean:coverage clean clean:dependencies",
    "clean": "run-p clean:build clean:public",
    "clean:coverage": "rimraf coverage",
    "clean:public": "rimraf public",
    "clean:build": "yarn l-run-p clean",
    "clean:dependencies": "lerna clean -y",
    "test": "karma start",
    "lint": "run-p lint:*",
    "lint:eslint": "yarn e-run",
    "lint:prettier": "yarn p-run --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "lint:tslint": "yarn t-run",
    "format": "run-p format:*",
    "format:eslint": "yarn e-run --fix",
    "format:prettier": "yarn p-run --write",
    "format:tslint": "yarn t-run --fix",
    "watch": "run-p watch:*",
    "watch:format": "run-p watch:format:*",
    "watch:build": "yarn l-run-p watch",
    "watch:format:prettier": "yarn on-run '**/*.{js,ts,html,md,yml,json}' -- -- prettier --write {{changed}}",
    "watch:format:eslint": "yarn on-run '**/*.{js,html}' -- -- eslint --fix {{changed}}",
    "watch:format:tslint": "yarn on-run '**/*.ts' -- -- yarn t-run --fix {{changed}}",
    "link": "lerna link --force-local",
    "server": "es-dev-server -o",
    "dev": "run-p watch"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@open-wc/building-rollup": "^0.9.4",
    "@open-wc/demoing-storybook": "^0.3.0",
    "@open-wc/eslint-config": "^1.0.0",
    "@open-wc/polyfills-loader": "^0.3.2",
    "@open-wc/testing": "^2.2.1",
    "@open-wc/testing-karma": "^3.1.5",
    "@open-wc/testing-karma-bs": "^1.1.30",
    "@types/node": "^12.6.8",
    "@types/storybook__react": "^4.0.2",
    "@types/webpack-merge": "^4.1.5",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "husky": "^3.0.2",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.1",
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "es-dev-server": "^1.8.3",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "rollup": "^1.17.0",
    "rollup-plugin-cpy": "^2.0.1",
    "rollup-plugin-replace": "^2.2.0",
    "typescript": "^3.5.3",
    "webpack-merge": "^4.2.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "rules": {
      "import/no-extraneous-dependencies": false
    }
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 80,
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid",
    "proseWrap": "always"
  }
}
