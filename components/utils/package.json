{
  "name": "@ufrj/mnv-utils",
  "version": "0.0.0",
  "main": "lib/index.js",
  "module": "lib/MnvUtils.js",
  "license": "AGPL-3.0",
  "author": "Vin√≠cius Carvalho <vinicius.fc93@gmail.com> (https://ufrj.br)",
  "contributors": [],
  "scripts": {
    "clean": "run-p clean:*",
    "clean:build": "run-p _clean:build:*",
    "_clean:build:public": "rimraf public",
    "_clean:build:lib": "rimraf lib",
    "clean:package": "rimraf *.tgz",
    "clean:cache": "rimraf .rpt2_cache",
    "build": "run-s clean:build _build:all",
    "_build:all": "run-p build:*",
    "build:typescript": "tsc -p ./config/tsconfig.build.json",
    "build:webcomponent": "rollup -c ./config/rollup.config.build.js",
    "watch": "run-s _watch:pre:* build:typescript watch:*",
    "_watch:pre:clean": "run-p clean:cache clean:package _clean:build:public",
    "watch:webcomponent": "onchange -i -k 'src/index.html' -- run-s _clean:build:public _watch:webcomponent",
    "_watch:webcomponent": "rollup -c ./rollup.config.js -w"
  },
  "dependencies": {
    "lit-element": "^2.2.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.15.6",
    "typescript": "^3.5.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ]
  },
  "mnv": {
    "rollup": {
      "input": "./src/index.html",
      "outputDir": "../../public",
      "external": [
        "lit-element"
      ]
    }
  }
}
