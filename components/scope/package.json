  "author": "Vin√≠cius Carvalho <vinicius.fc93@gmail.com> (https://ufrj.br)",
  "contributors": [
    "Luiz Santos <luizggsantos@gmail.com> (https://ufrj.br)"
  ],
  "keywords": [
    "design",
    "system",
    "web",
    "polymer",
    "components"
  ],
  "homepage": "http://ufrj.br",
  "repository": {
    "type": "git",
    "url": "https://github.com/ufrj-lab/mnv.git"
  },
  "license": "AGPL-3.0",
  "private": false,
  "directories": {
    "test": "__tests__"
  },
  "main": "lib/mnvScope.js",
  "files": [
    "lib"
  ],
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "scripts": {
    "build": "rollup -c",
    "new": "echo \"Error: run new from root\" && exit 1",
    "test": "echo \"Error: run test from root\" && exit 1",
    "watch": "rollup -c -w",
    "bs": "browser-sync start  -c ./bs-config.js --startPath scope/",
    "watch:global": "lerna run  --parallel  build && lerna run --parallel --stream watch",
    "dev": "npm-run-all -p watch:global bs"
  },
  "dependencies": {
    "@ufrj/mnv-base": "^0.0.4-alpha.0"
  },
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "lerna": "^3.11.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.19.1"
  },
  "mnv": {
    "targets": [
      {
        "type": "node"
      },
      {
        "type": "browser"
      }
    ],
    "clear": [
      "tmp",
      "lib",
      "../_public/fonts"
    ],
    "copy": {
      "browser": {
        "assets/fonts": "../_public/fonts"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
